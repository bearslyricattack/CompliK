# CompliK Environment Variables Example
# Copy this file to .env and fill in your actual values

# ===== LOGGING CONFIGURATION =====
# Log level: DEBUG, INFO, WARN, ERROR, FATAL
COMPLIK_LOG_LEVEL=INFO

# Log format: text or json
COMPLIK_LOG_FORMAT=text

# Show colors in log output (only for text format)
COMPLIK_LOG_COLORED=true

# Show caller information (file:line)
COMPLIK_LOG_CALLER=true

# Log file path (leave empty for stdout)
# COMPLIK_LOG_FILE=/var/log/complik/app.log

# Log rotation settings
# COMPLIK_LOG_MAX_SIZE=104857600    # 100MB in bytes
# COMPLIK_LOG_MAX_BACKUPS=10        # Number of backup files to keep
# COMPLIK_LOG_MAX_AGE=30            # Days to keep old log files

# ===== SECURITY CONFIGURATION =====
# Encryption key for sensitive data (32 characters recommended)
COMPLIK_ENCRYPTION_KEY=your-32-character-encryption-key

# Region configuration
REGION=cn-beijing

# Database configuration
DB_HOST=your-database-host
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your-secure-password

# PostgreSQL configuration
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your-postgres-password

# Lark configuration
LARK_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-id
LARK_DB_HOST=your-lark-db-host
LARK_DB_PORT=3306
LARK_DB_USERNAME=root
LARK_DB_PASSWORD=your-lark-db-password

# API configuration
SAFETY_API_KEY=your-safety-api-key
SAFETY_API_BASE=https://api.openai.com/v1
CUSTOM_API_KEY=your-custom-api-key
CUSTOM_API_BASE=https://api.openai.com/v1

# Kubernetes configuration
KUBECONFIG_PATH=/path/to/your/kubeconfig.yml